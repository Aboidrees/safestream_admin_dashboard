# =============================================================================
# SafeStream Platform Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# Never commit the actual .env file to version control

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Node Environment (development, production, test)
NODE_ENV="development"

# Application URL (used by NextAuth and CORS)
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Connection String
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL="postgresql://user:password@localhost:5432/safestream"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# NextAuth.js Secret Key (32+ characters, use a strong random string)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-here-please-change-in-production"

# JWT Secret Key (32+ characters, use a strong random string)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-jwt-secret-key-here-please-change-in-production"

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# Backend API Port (default: 4000)
PORT="4000"


# =============================================================================
# EMAIL CONFIGURATION (Optional - for future features)
# =============================================================================

# SMTP Server Configuration
# EMAIL_SERVER="smtp://username:password@smtp.example.com:587"
# EMAIL_FROM="noreply@safestream.app"

# =============================================================================
# EXTERNAL API INTEGRATIONS (Optional - for future features)
# =============================================================================

# YouTube Data API v3 Key
# YOUTUBE_API_KEY="your-youtube-api-key-here"

# Video CDN URL
# VIDEO_CDN_URL="https://cdn.safestream.app"

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Uncomment and configure for production deployment
# NEXTAUTH_URL="https://yourdomain.com"
# DATABASE_URL="postgresql://prod_user:prod_password@prod_host:5432/safestream_prod"
# NODE_ENV="production"

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# These are automatically set based on NODE_ENV
# Rate limiting is disabled in development
# Debug logging is enabled in development